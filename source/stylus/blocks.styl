.b-common-wrap
    padding-bottom 100px

.b-container
    max-width 1400px
    width 100%
    margin 0 auto
    position relative
    height 100%

.b-footer
    position absolute
    width 100%
    bottom 0
    left 0
    height 100px

.b-info
    &__tab
        text-decoration none
        &:hover, &_active
            text-decoration underline
    &__content-item
        display none
        &_active
            display block

.h-popup
    position fixed
    width 100%
    height 100%
    top 0
    left 0
    text-align center
    z-index 25
    font-size 0
    overflow-y auto
    padding 65px 0
    background-color rgba(0, 0, 0, 0.58)
    fadeOut(.3s)
    &:before
        content ''
        height 100%
        display inline-block
        vertical-align middle
    &__inside
        display inline-block
        vertical-align middle
        font-size 16px
    &_visible
        fadeIn()

.b-swiper
    .swiper-slide
        display inline-block
        vertical-align top
        width auto
